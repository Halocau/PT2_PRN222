@model List<BuiTienQuat_SE1814_NET_PT2.Models.Student>

@{
	ViewData["Title"] = "Student List";
}

<!DOCTYPE html>
<html>
<head>
	<title>@ViewData["Title"]</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
	<p>
		<a asp-action="Create">Create New</a>
	</p>
	<div class="container">
		<h1 class="mt-4">Student Management</h1>
		<!-- Search -->
		<div class="mb-3">
			<input type="text" id="searchInput" class="form-control" placeholder="Enter name or major to search..." />
			<button class="btn btn-primary mt-2" onclick="searchStudent()">Search</button>
		</div>




		<!-- Danh sách sinh viên -->
		<table class="table table-striped" id="studentTable">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Date of Birth</th>
					<th>Major</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody id="studentTableBody">
				@foreach (var student in Model)
				{
					<tr>
						<td>@student.Id</td>
						<td>@student.Name</td>
						<td>@student.Dob?.ToString("yyyy-MM-dd")</td>
						<td>@student.Major</td>
						<td>
							<button class="btn btn-warning btn-sm edit-btn">
								<a asp-action="Edit" asp-route-id="@student.Id">Edit</a>
							</button>
							<form asp-action="Delete" method="post" style="display:inline;"
								  onsubmit="return confirm('Are you sure you want to delete this student?');">
								<input type="hidden" name="id" value="@student.Id" />
								<button type="submit" class="btn btn-danger btn-sm">Delete</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

</body>
@section Scripts {
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
	<script src="~/js/signalr/dist/browser/signalr.js"></script>
	<script>
		// Kết nối tới SignalR Hub
		const connection = new signalR.HubConnectionBuilder()
			.withUrl("/signalRServer")
			.configureLogging(signalR.LogLevel.Information)
			.build();

		// Xử lý sự kiện LoadCustomer từ Hub
		connection.on("RefreshStudentList", function () {
			// Gọi AJAX để làm mới bảng khách hàng
			$.ajax({
				url: "/Student/Index",
				method: "GET",
				success: function (data) {
					// Cập nhật nội dung bảng
					$("#studentTableBody").html($(data).find("#studentTableBody").html());
					// Cập nhật số lượng khách hàng
					var count = $("#studentTableBody tr").length;
					$("p:contains('List of Customer count')").text("List of Customer count: " + count);
				},
				error: function (err) {
					console.error("Error refreshing customer list: ", err);
				}
			});
		});

		// Bắt đầu kết nối
		connection.start().then(function () {
			console.log("Connected to SignalR Hub");
		}).catch(function (err) {
			console.error("Error connecting to SignalR: ", err.toString());
		});

				function searchStudent() {
			let keyword = document.getElementById("searchInput").value;
			$.ajax({
				url: "/Student/Search?keyword=" + encodeURIComponent(keyword),
				method: "GET",
				success: function (data) {
					$("#studentTableBody").html(data);
				},
				error: function (err) {
					console.error("Error searching students: ", err);
				}
			});
		}




	</script>

}
</html>